<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/index.css">
    <script src="https://kit.fontawesome.com/d646a66da9.js" crossorigin="anonymous"></script>
</head>

<body>
    <h1><i class="fa-solid fa-id-badge"></i>
        <%= title %>
    </h1>
    <div class="contact-list">
        <ul>
            <% list.forEach((item, index)=> { %>
                <li>
                    <div class="details">
                        <p>
                            <%= (index + 1) %>. <%= item.name %>
                        </p>
                        <p>
                            <%= item.phone %>
                        </p>
                    </div>
                    <div class="delete">
                        <a href="/delete-contact/<%= item._id %>">
                            <i class="fa-solid fa-delete-left"></i>
                        </a>
                    </div>
                </li>
                <% }); %>
        </ul>
    </div>

    <form action="/create-contact" method="POST">
        <input type="text" name="name" placeholder="Enter name">
        <input type="number" name="phone" placeholder="Enter phone">
        <button type="submit">Submit</button>
    </form>
    <script src="/js/index.js"></script>
</body>

</html>